{
  "name": "vellorum_api",
  "version": "1.0.0",
  "description": "Vellorum API",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev:build": "nodemon build/server.js",
    "start": "node build/server.js",
    "dev": "nodemon ./src/server.ts",
    "production": "NODE_ENV=production node ./build/server.js",
    "stage": "NODE_ENV=stage node ./build/server.js",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "lint:check": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "typeorm": "ts-node ./node_modules/.bin/typeorm -f ./src/config/db/ormconfig.ts",
    "typeorm:build": "./node_modules/.bin/typeorm -f ./build/config/db/ormconfig.js",
    "prepare": "husky install",
    "docs": "apidoc -i src/config/apidoc/ -o public/docs/",
    "db:seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed --configName ./src/config/db/ormconfig.ts",
    "schema:drop": "ts-node ./node_modules/typeorm/cli.js -f ./src/config/db/ormconfig.ts schema:drop",
    "schema:sync": "ts-node ./node_modules/typeorm/cli.js -f ./src/config/db/ormconfig.ts schema:sync"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.6.2",
    "@types/colors": "^1.2.1",
    "apidoc": "^0.50.4",
    "apollo-server-core": "^3.6.3",
    "apollo-server-express": "^3.6.3",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "class-validator": "^0.13.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "faker": "^6.6.6",
    "graphql": "^15.8.0",
    "graphql-middleware": "^6.1.15",
    "inversify": "^5.1.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.44",
    "typeorm-seeding": "^1.6.1",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@types/apidoc": "^0.50.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^6.6.9",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/ms": "^0.7.31",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.21",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --write \"src/**/*.ts\""
  }
}
